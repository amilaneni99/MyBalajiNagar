                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/capriola"
                    android:text="Ponneri EB Sub-Station"
                    android:textAlignment="viewStart"
                    android:textColor="#000"
                    android:textSize="21sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/taluk_office"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="0.5"
                    android:src="@drawable/ic_government_buildings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/capriola"
                    android:text="Ponneri Taluk Office"
                    android:textAlignment="viewStart"
                    android:textColor="#000"
                    android:textSize="21sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:id="@+id/rly"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="4">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:layout_gravity="left|center_vertical"
                    android:layout_margin="10dp"
                    android:layout_weight="0.6"
                    android:src="@drawable/ic_train_station" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/capriola"
                    android:text="Ponneri Railway Station"
                    android:textAlignment="viewStart"
                    android:textColor="#000"
